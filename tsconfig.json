{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./packages",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./packages/api/src/types"],
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["packages/**/*.ts", "packages/api/test/services"],
  "exclude": ["node_modules", "dist"],
}

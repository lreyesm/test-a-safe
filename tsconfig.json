{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./packages",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./packages/api/src/types"]
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
